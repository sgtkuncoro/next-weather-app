{
  "root": true,
  "extends": [
    "standard",
    "standard-react"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__PRODUCTION__": true,
    "__DEBUG__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "FileReader": false,
    "FormData": false,
    "jQuery": false
  },
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "camelcase": [
      "warn",
      {
        "properties": "never"
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ]
  }
}